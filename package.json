{
  "name": "mission-report-generator",
  "version": "1.0.0",
  "description": "Générateur de rapports PDF pour les missions de simulation de combat aérien",
  "main": "src/app.js",
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development electron .",
    "build": "electron-builder",
    "test": "jest"
  },
  "author": "ARESIA",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "pdfkit": "^0.14.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1"
  },
  "build": {
    "appId": "com.aresia.missionreportgenerator",
    "productName": "Générateur de Rapports de Mission",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "public/images/app_icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/images/app_icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/images/app_icon.png"
    },
    "files": [
      "src/**/*",
      "public/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "public/images",
        "to": "images"
      }
    ]
  }
}
